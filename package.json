{
  "name": "senectus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "eslint --fix && next build && next start",
    "lint": "eslint src --max-warnings=0",
    "prettier": "prettier --write",
    "lint:fix": "eslint --fix",
    "prepare": "husky",
    "commit": "cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.+(js|jsx|ts|tsx|md|mdx)": [
      "npm run prettier",
      "npm run lint:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@nextui-org/button": "^2.0.38",
    "@nextui-org/checkbox": "^2.1.5",
    "@nextui-org/pagination": "^2.0.36",
    "@nextui-org/react": "^2.4.8",
    "next": "14.2.14",
    "react": "^18.3.1",
    "react-dom": "^18",
    "react-icons": "^5.3.0",
    "styled-components": "^6.1.13"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "commitizen": "^4.3.1",
    "commitlint": "^19.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
